<!-- model required for strong typing  -->
@model KronoBlog.ViewModels.AuthLogin 
@{
    ViewData["Title"] = "Login";
}


<div class="col-md-8 col-md-offset-2">

    @using (Html.BeginForm(new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary();
        <fieldset>
            <legend>Login</legend>
            <div class="form-group">

                @Html.LabelFor(x => x.Username, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.EditorFor(x => x.Username, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">

                @Html.LabelFor(x => x.Password , new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.EditorFor(x => x.Password , new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </fieldset>
    }
</div>